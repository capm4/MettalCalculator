<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:elevation="7dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:elevation="2dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/calculatorList"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_weight="1"></ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:elevation="3dp"
            android:background="#FFFFFF"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageCalculator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       android:paddingTop="20dp"
                        >

                        <TextView
                            android:id="@+id/viewCalcF"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="-5dp"
                            android:layout_marginBottom="10dp"
                            android:paddingLeft="5dp" />

                        <EditText
                            android:id="@+id/calcEditF"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:ems="0"
                            android:inputType="numberDecimal" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/calcViewS"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="-5dp"
                            android:paddingLeft="5dp" />

                        <EditText
                            android:id="@+id/calcEditS"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:ems="0"
                            android:inputType="numberDecimal" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/calcViewT"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="-5dp"
                            android:paddingLeft="5dp" />

                        <EditText
                            android:id="@+id/calcEdirT"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:ems="0"
                            android:inputType="numberDecimal"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingBottom="30dp">

                        <TextView
                            android:id="@+id/calcResTex"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:paddingLeft="5dp" />

                        <TextView
                            android:id="@+id/calcResEdit"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-5dp"
                            android:paddingLeft="5dp"
                            android:layout_gravity="center"
                            android:textSize="16dp"
                            android:textColor="#000000"/>
                    </TableRow>

                    <Button
                        android:id="@+id/btnResultCalc"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        style="@style/Widget.AppCompat.Button.Colored" />
                </TableLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
